    <div class="row">

        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                            <h5 class="card-title">Ghost


                                <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="img/Ghost.png" width="100%" alt="">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">dgdfg</p>
                            <p class="card-text"><b>Cinema: </b>gj</p>
                            <p class="card-text"><b>Category: </b>df</p>
                            <p class="card-text"><b>Start Date: </b>df</p>
                            <p class="card-text"><b>End Date: </b>dfg</p>
                            <p class="card-text ">
                                <b>Status: </b>

                                <span class="badge bg-success text-white">AVAILABLE</span>

                                <span class="badge bg-danger text-white">EXPIRED</span>

                                <span class="badge bg-primary text-white">UPCOMING</span>
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>

                                <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
