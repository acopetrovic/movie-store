<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eTickets</title>
    <link href="">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

</head>
<div class="row">


    <div class="col-md-4 col-xs-6 border-primary mb-3">
        <div class="card mb-3" style="max-width: 540px;">
            {{#movies}}
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">

                        <p class="card-text">

                        <h5 class="card-title">{{name}}


                            <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        </h5>
                        </p>

                    </div>
                </div>
                <div class="col-md-6">

                    <img src="{{imageurl}}" width="100%" alt="@item.Name">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text"></p>
                        <p class="card-text"><b>Cinema: </b>{{cinemaid}}</p>
                        <p class="card-text"><b>Category: </b>{{moviecategory}}</p>
                        <p class="card-text"><b>Start Date: </b>{{startdate}}</p>
                        <p class="card-text"><b>End Date: </b>{{enddate}}</p>
                        <p class="card-text ">
                            <b>Status: </b>

                            <span class="badge bg-success text-white">AVAILABLE</span>

                            <span class="badge bg-danger text-white">EXPIRED</span>

                            <span class="badge bg-primary text-white">UPCOMING</span>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                            <a class="btn btn-success text-white @((DateTime.Now > item.EndDate) ? ">
                            <i class="bi bi-cart-plus"></i> Add to Cart({{price}})

                            </a>
                        </p>
                    </div>
                </div>
            </div>
            {{/movies}}
        </div>
    </div>

</div>
<script src="../js/main.js"></script>
<script src="../js/jquery.js"></script>


